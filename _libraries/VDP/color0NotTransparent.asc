;; makes color 0 a color, instead of transparent.
Color0NotTransparent:
    DI
    ld HL, $FFE7        ; R8 mirror in memory
    ld a, (HL)          ; set color 0 to a color, not transparant
    or 32               ; set TP bit
    ld (HL), a          ; write new value back to mirror
    out (VDPC), a       ; write R8
    ld a, $80 +8        
    out (VDPC), a
    EI
    ret