;; ==[ CALL HMMV ]===============================================
;; vult een vierkant met 1 kleur
;;
;; INPUT
;; - HL : Adres HMMV header 
;; -> 2DX,2DY,2MX,2MY,1CLR,1ARG,1CMD     (total 11 bytes)
;;
;; GEBRUIKT
;; - VDPC, VDPR variabelen.
;;
;; INFO
;; HMMV command byte = $AD

HMMV:
    DI                  
    in a, (VDPC)        ; even status check om vdp te schonen

    ld a, 36            ; auto-increment (geen $80) vanaf register 36
    out (VDPC), a
    ld a, $80 + 17      ; schrijf ($80) naar R17
    out (VDPC), a    
    
    ld b, 11
    ld c, VDPR  

HMMVHeaderLoop:
    outi                ; ; - out (c), (hl) - inc hl - dec b
    jr nz, HMMVHeaderLoop
    ret