;; ==[ CALL WriteString8 ]===============================================
;; Print een string op het scherm via writeletter8 
;; INPUT
;; HL: location to X (1),Y (1), text (bytes)
;; B: length of text
;; C: color

WriteString8:
    ld D, (HL)
    inc hl
    ld E, (HL)
    inc hl
writestring8loop:   
    push HL
    push DE
    push BC

    ld a, (HL)           ; a: letter
    ;ld HL, FontData
    ld b, c
    call WriteLetter8    ; A: Letter, B: Kleur, DE:  locatie (D=x, E=y)

    pop BC
    pop DE
    pop HL

    ld a, 7             ; move to next position (letter are 8 pixels wide!)
    add a, d
    ld d, a
    inc HL              ; voglende letter
    djnz writestring8loop
    ret